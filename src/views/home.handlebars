<div class="container">
        <h1 class="title text-center my-3 py-5">Lista de productos</h1>
        <div class="row">
            {{#each products}}
            <div class="col-4 mb-4">
                <div class="card" style="width: 100%;">
                    <img src="{{this.img}}" class="card-img-top" alt="FotoProducto">
                    <div class="card-body">
                        <h5 class="card-title text-center">{{this.title}}</h5>
                        <p class="card-text">{{this.description}}</p>
                        <p class="card-text">Precio: ${{this.price}}</p>
                        <p class="card-text">Código: {{this.code}}</p>
                        <p class="card-text">Stock: {{this.stock}}</p>
                        <p class="card-text">Categoría: {{this.category}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
